# --- Database used by local Mautic container ---
MAUTIC_DB_PASSWORD=mauticdbpass
MYSQL_ROOT_PASSWORD=change_me_root

# --- Gmail SMTP for Mautic (use an App Password) ---
# Replace user%40gmail.com with URL-encoded email ("@" as %40)
# Example if your email is alice@gmail.com and app password is abcd efgh ijkl mnop:
# MAUTIC_MAILER_DSN=smtp://alice%40gmail.com:abcdefghijklmnop@smtp.gmail.com:587?encryption=tls
MAUTIC_MAILER_DSN=

# --- Azure MySQL source database (managed) ---
AZURE_MYSQL_HOST=your-azure-mysql.mysql.database.azure.com
AZURE_MYSQL_PORT=3306
AZURE_MYSQL_DATABASE=your_db
AZURE_MYSQL_USER=your_user@your-azure-mysql
AZURE_MYSQL_PASSWORD=your_password
# Set to 'true' only if your Azure MySQL does not require SSL (most do)
AZURE_MYSQL_SSL_DISABLED=false

# Provide either AZURE_MYSQL_TABLE or a custom AZURE_MYSQL_QUERY
AZURE_MYSQL_TABLE=users
# AZURE_MYSQL_QUERY=SELECT * FROM users

# Mautic API access (Basic Auth; enable API in Mautic settings for this user)
MAUTIC_BASE_URL=http://localhost:8080
MAUTIC_API_USER=admin
MAUTIC_API_PASSWORD=admin_password

# Optional batching
BATCH_SIZE=500
